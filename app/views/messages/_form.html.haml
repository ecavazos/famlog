- form_for @message do |f|
  %p
    = f.label :title
    %br
    = f.text_field :title
  %p
    = f.label :importance
    %br
    = f.select :importance, Importance::ALL, :include_blank => true
  %p
    = f.label :message
    %br
    = f.text_area :message
  %p
    = f.label :start_date
    %br
    = f.text_field :start_date
  %p
    = f.submit "Submit"
    or
    = link_to "Cancel", messages_path
