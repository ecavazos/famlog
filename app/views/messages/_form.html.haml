= form_for @message do |f|
  - if @message.errors.any?
    #errors
      %ul
        - @message.errors.full_messages.each do |msg|
          %li= msg
  %p
    = f.label :message
    = f.text_area :text
  %p
    = f.label :importance
    = f.select :importance, Importance::ALL
  %p
    = f.submit "Submit", :class => "submit"
    or
    = link_to "Cancel", root_path, :class => "cancel"
