%p
  = f.label :title
  = f.text_field :title
%p
  = f.label :message
  = f.text_area :message, :cols => 77, :rows => 3
%p
  = f.label :importance
  = f.select :importance, Importance::ALL

%p
  = f.label :start_date
  .date-select
    = f.datetime_select :start_date

%p
  = f.label :end_date
  .date-select
    = f.datetime_select :end_date

%p
  = f.submit "Submit", :class => "submit"
  or
  = link_to "Cancel", root_path, :class => "cancel"

