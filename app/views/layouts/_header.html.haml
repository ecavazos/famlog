#header-clip
  #header
    #hdr-group
      %h1
        = link_to 'famlog', root_path
      %ul#hdr-util
        - if current_user
          %li
            = link_to current_user.username.capitalize, edit_user_registration_path(current_user.username)
          %li
            = link_to 'Family', family_path
          %li
            = link_to 'Help', help_path
          %li
            = link_to 'Sign out', destroy_user_session_path
        - else
          %li
            = link_to 'Sign in', new_user_session_path
          %li
            |
          %li
            = link_to 'Sign up', new_user_registration_path

